<select id="selectBoardView" resultType="BoardDTO">
		SELECT 
		board_code, board_title, board_user,board_content, like_count, board_view, board_date, board_time,img_src
		FROM
		tbl_board 
		LEFT JOIN tbl_like
		ON board_code = like_concode
		LEFT JOIN tbl_image SB
		ON board_code = img_concode
	</select>
<select id="selectBoardList" resultType="BoardDTO">
		SELECT 
		board_code, board_title, board_user, like_count, board_view, board_date, board_time
		FROM
		tbl_board 
		LEFT JOIN tbl_like
		ON board_code = like_bdcode
		order by board_code desc
	</select>
